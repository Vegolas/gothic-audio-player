{
  "name": "gothic-audio-player",
  "displayName": "Gothic Audio Player",
  "description": "Play Gothic dialogue audio files and fix Silesian encoding directly in the editor.",
  "version": "0.2.0",
  "publisher": "MTCode",
  "icon": "gothic_ii_desktop_icon_by_tarvanis.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vegolas/gothic-audio-player"
  },
  "bugs": {
    "url": "https://github.com/Vegolas/gothic-audio-player/issues"
  },
  "homepage": "https://github.com/Vegolas/gothic-audio-player#readme",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gothic-audio-player.playDialogueAudio",
        "title": "Play Gothic Audio"
      },
      {
        "command": "gothic-audio-player.stopAudio",
        "title": "Stop Gothic Audio"
      },
      {
        "command": "gothic-audio-player.fixSilesian",
        "title": "Fix Silesian"
      },
      {
        "command": "gothic-audio-player.verifyDialogues",
        "title": "Verify All Dialogues in File"
      }
    ],
    "keybindings": [
      {
        "command": "gothic-audio-player.playDialogueAudio",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "gothic-audio-player.stopAudio",
        "key": "ctrl+alt+s"
      },
      {
        "command": "gothic-audio-player.fixSilesian",
        "key": "ctrl+alt+["
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "gothic-audio-player.playDialogueAudio",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Gothic Audio Player",
      "properties": {
        "gothicAudio.audioDir": {
          "type": "string",
          "default": "",
          "description": "Base directory for Gothic audio files (e.g., Gothic/Data/Speech)"
        },
        "gothicAudio.audioFormat": {
          "type": "string",
          "default": "standard",
          "enum": [
            "standard",
            "vorbis-ogg"
          ],
          "enumDescriptions": [
            "Standard WAV files (uses Windows Media Player)",
            "Vorbis OGG encoded WAV files (Union patch format)"
          ],
          "description": "Audio format type for playback"
        },
        "gothicAudio.volume": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "maximum": 100,
          "description": "Volume level for audio playback (0-100)"
        },
        "gothicAudio.showPlaybackNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show notification when audio playback starts"
        },
        "gothicAudio.registerFixSilesian": {
          "type": "boolean",
          "default": false,
          "description": "Enable the Fix Silesian command. It's disabled by default to avoid cluttering the command palette since it's niche to my (author) project."
        },
        "gothicAudio.transcription.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable dialogue transcription verification feature"
        },
        "gothicAudio.transcription.apiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai"
          ],
          "enumDescriptions": [
            "OpenAI Whisper API"
          ],
          "description": "API provider for audio transcription"
        },
        "gothicAudio.transcription.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for transcription service"
        },
        "gothicAudio.transcription.language": {
          "type": "string",
          "default": "de",
          "enum": [
            "de",
            "en",
            "pl",
            "cs",
            "auto"
          ],
          "enumDescriptions": [
            "German",
            "English",
            "Polish",
            "Czech",
            "Auto-detect"
          ],
          "description": "Language for transcription"
        },
        "gothicAudio.transcription.confidenceThreshold": {
          "type": "number",
          "default": 0.8,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum confidence score (0-1) to flag transcription for review"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "openai": "^6.9.1"
  }
}
